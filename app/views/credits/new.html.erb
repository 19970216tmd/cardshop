<%= render 'layouts/header' %>
<flex>
 <%= render 'layouts/sidebar' %>
 <main>
  <div>
   <%= form_with(url: pay_credits_path, method: :post, id: 'charge-form',  name: "inputForm",local: true) do |form| %>
     <label class="costlabel">カード番号</label>
     <div class ="center">
      <%= form.text_field "number", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number" %>
     </div>

     <label class="costlabel">有効期限</label>
     <div class ="center">
      <%= form.select :exp_month, [[1,"01"],[2,"02"],[3,"03"],[4,"04"],[5,"05"],[6,"06"],[7,"07"],[8,"08"],[9,"09"],[10,"10"],[11,"11"],[12,"12"]] %>月/
      <%= form.select :exp_year, [[21,"2021"],[22,"2022"],[23,"2023"],[24,"2024"],[25,"2025"],[26,"2026"],[27,"2027"],[28,"2028"],[29,"2029"],[30,"2030"],[31,"2031"]] %>年
     </div>

     <label class="costlabel">セキュリティコード</label>
     <div class ="center">
      <%= form.text_field "cvc", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc" %>
     </div>

     <div class="button3">
      <%= form.submit "追加する", id: "token_submit" %>
     </div>
   <% end %>
  </div>
  <%= javascript_include_tag "payjp.js" %>
</main>
</flex>