<%= render 'layouts/header' %>
<flex>
    <%= render 'layouts/sidebar' %>
    <main>

      <h2>登録クレジットカード情報</h2>
      <label class="costlabel">カード番号</label>
      <div class="center">
        <%= "**** **** **** " + @default_credit_information.last4.to_s %>
      </div>
      <label class="costlabel">有効期限</label>
      <div class="center">
        <%= @default_credit_information.exp_month.to_s + "月/" + @default_credit_information.exp_year.to_s.slice(2,3) + "年" %>
      </div>

      <%= form_with(url: delete_credits_path, method: :post, id: 'charge-form',  name: "inputForm",local: true) do |form| %>
        <%= form.hidden_field name: "card_id", value: "" %>
        <div class="button3">
        <%= form.submit "削除する" %>
        </div>
      <% end %>
      <%= javascript_include_tag "payjp.js" %>
  </main>
</flex>